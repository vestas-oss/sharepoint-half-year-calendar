{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ]
    },
    "test": {
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "test/**/*.ts"
      ],
      "outputLogs": "full"
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
